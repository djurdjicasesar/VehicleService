@page
@model VehicleService.Pages.ServiceTypes.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<br />
<div class="border white">
    <h2 class="text-info">Are you sure you want to delete this?</h2>
    <hr />
    <input type="hidden" asp-for="ServiceType.Id" />
    <div class="row">
        <div class="col-2 font-weight-bold">
            <label asp-for="ServiceType.Name"></label>
        </div>
        <div class="col-5">
            @Html.DisplayFor(m => m.ServiceType.Name)
        </div>
    </div>
    <div class="row">
        <div class="col-2 font-weight-bold">
            <label asp-for="ServiceType.Price"></label>
        </div>
        <div class="col-5">
            @Html.DisplayFor(m => m.ServiceType.Price) $
        </div>
    </div>
    <br />

    <form method="post">
        <div class="row">
            <div class="col-5 offset-2">
                <input type="hidden" asp-for="ServiceType.Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a class="btn btn-info" asp-page="./Index">Back to List</a>
            </div>
        </div>
    </form>
</div>
