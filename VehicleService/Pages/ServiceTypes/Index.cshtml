@page
@model VehicleService.Pages.ServiceTypes.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@using VehicleService.Utility
<br /><br />
<div class="white">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Service Type List</h2>
        </div>
        @if (User.IsInRole(SD.Admin))
        {
        <div class="col-6 text-right">
            <a asp-page="Create" class="btn btn-info">Create New</a>
        </div>
        }
    </div>
    <br />
    <div>
        @if (Model.ServiceType.Count == 0)
        {
            <p>
                There are no Service Types currently available.
            </p>
        }
        else
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.ServiceType[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ServiceType[0].Price)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model.ServiceType)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Price) $
                        </td>
                        <td style="width:150px">
                            <div class="btn-group" role="group">
                                <a class="btn btn-info text-white" asp-page="Details" asp-route-Id="@item.Id">Details</a>
                                @if (User.IsInRole(SD.Admin))
                                {
                                <a class="btn btn-warning text-white" asp-page="Edit" asp-route-Id="@item.Id">Edit</a>
                                <a class="btn btn-danger text-white" asp-page="Delete" asp-route-Id="@item.Id">Delete</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
</div>
