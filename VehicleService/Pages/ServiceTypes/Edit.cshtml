@page
@model VehicleService.Pages.ServiceTypes.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<div class="border white">
    <h2 class="text-info">Edit Service Type</h2>
    <br />
    <form method="post">

        <input type="hidden" asp-for="ServiceType.Id" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Name" class="form-control" />
            </div>
            <span asp-validation-for="ServiceType.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Price" class="form-control" />
            </div>
            <span asp-validation-for="ServiceType.Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_EditBackButton" />
            </div>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
